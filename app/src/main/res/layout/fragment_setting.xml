<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainPage.SettingFragment">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="题目："
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/title1"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="2"
        android:hint="请输入标题，字符数不多于99"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/title_text"
        app:layout_constraintStart_toEndOf="@+id/title_text"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="说明："
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@id/title_text" />

    <EditText
        android:id="@+id/instruction_input"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="3"
        android:hint="请输入说明，字符数不多于999"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@id/instruction"
        app:layout_constraintStart_toEndOf="@+id/instruction"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="答题时间："
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/instruction"
        app:layout_constraintTop_toBottomOf="@id/instruction" />

    <EditText
        android:id="@+id/start"
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:inputType="datetime"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="到"
        app:layout_constraintEnd_toEndOf="@+id/time"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time" />

    <EditText
        android:id="@+id/end"
        android:layout_width="203dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="datetime"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/time">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="时长:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/time_length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/timesLimit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="次数限制:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/timeLimitEt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="94dp"
        android:layout_height="29dp"
        android:text="答题密码:"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toTopOf="@+id/switch1" />

    <EditText
        android:id="@+id/pswd"
        android:layout_width="212dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/linear1"
        app:layout_constraintTop_toBottomOf="@+id/linear1" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:text="人员限制:"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/switch2"
        app:layout_constraintTop_toTopOf="@+id/switch2" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:text="要求输入学号"
        app:layout_constraintStart_toStartOf="@+id/switch2"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

    <CheckBox
        android:id="@+id/major_limit"
        android:layout_width="89dp"
        android:layout_height="57dp"
        android:text="学院限定"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="73dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="添加学院"
        android:textColor="#66ccff"
        app:layout_constraintStart_toEndOf="@+id/major_limit"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:text="年级限定"
        app:layout_constraintStart_toStartOf="@+id/major_limit"
        app:layout_constraintTop_toBottomOf="@+id/major_limit" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="添加年级"
        android:textColor="#66ccff"
        app:layout_constraintStart_toEndOf="@+id/checkBox3"
        app:layout_constraintTop_toBottomOf="@+id/major_limit" />

</androidx.constraintlayout.widget.ConstraintLayout>