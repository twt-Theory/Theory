<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/type"
        android:background="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/number"
        android:layout_marginLeft="5dp"
        android:text="1."
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/type"
        app:layout_constraintStart_toEndOf="@id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toTopOf="@+id/number"
        app:layout_constraintStart_toEndOf="@id/number"
        android:id="@+id/question"
        android:layout_width="120dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/add_image"
        app:layout_constraintTop_toTopOf="@id/question"
        app:layout_constraintStart_toEndOf="@+id/question"
        android:background="#000000"
        android:layout_width="40dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/value"
        android:layout_marginLeft="5dp"
        android:text="分值："
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/add_image"
        app:layout_constraintStart_toEndOf="@id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toTopOf="@id/value"
        app:layout_constraintStart_toEndOf="@id/value"
        android:inputType="number"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <RadioGroup
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="@id/question"
        android:id="@+id/seletions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/secletion_a"
            android:hint="A"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/secletion_b"
            android:layout_width="200dp"
            android:hint="B"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/secletion_c"
            android:hint="C"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/secletion_d"
            android:hint="D"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <RadioGroup
        app:layout_constraintTop_toTopOf="@id/seletions"
        app:layout_constraintStart_toStartOf="@id/seletions"
        android:layout_marginLeft="220dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/necessary"
            android:text="该题必答"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/random"
            android:text="选项随机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/jump"
            android:text="题目跳转"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>